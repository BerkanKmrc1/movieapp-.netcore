@model IEnumerable<Category>
<!-- componentimin içini burada tanımladım bu componenti diğer viewlerde kullanabilicem bu sayede
tek tek her viewde partial kullanmama gerek kalmıcak-->
<div class="list-group">
      <a href="/" class="list-group-item list-group-item-action ">Tüm Kategoriler</a>
    <!--Burdada tag helper kullandık html helperıyla benzer olay-->
    @foreach (var item in Model)
    {
    <a asp-controller="Admin" asp-action="Index" 
    asp-route-id="@item.Id"
    class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==item.Id.ToString()?"active":"")">
    @item.Name</a>
   
    }
</div>